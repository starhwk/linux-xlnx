config DRM_XLNX
	tristate "Xilinx DRM"
	depends on DRM && HAVE_CLK && OF
	select DRM_KMS_HELPER
	select DRM_KMS_CMA_HELPER
	select DRM_GEM_CMA_HELPER
	select DMA_ENGINE
	help
	  DRM driver for Xilinx display pipelines.

config DRM_XLNX_DP
	tristate "Xilinx DRM DisplayPort Driver"
	depends on DRM_XILINX
	help
	  DRM driver for Xilinx DisplayPort IP.

config DRM_ZYNQMP_DP_SUB
	tristate "ZynqMP DRM DisplayPort Subsystem Driver"
	depends on DRM_XILINX
	select DRM_XILINX_DP
	help
	  DRM driver for ZynqMP DisplayPort Subsystem.
